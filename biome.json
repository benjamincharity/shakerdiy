{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noExtraBooleanCast": "off"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "off",
          "options": {
            "attributes": ["className", "class"],
            "functions": ["cn", "tv", "clsx"]
          }
        }
      }
    }
  }
}
